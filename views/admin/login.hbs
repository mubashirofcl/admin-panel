<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js"></script>
    <link rel="stylesheet" href="/style/admin/adminLogin.css">
</head>

<body>
    <div class="login-card">

        <div class="login-icon">
            <i class="fas fa-user-shield"></i>
        </div>

        <h5>Admin Login</h5>
        <p>Secure access to the admin dashboard</p>

        {{#if message}}
        <div class="alert alert-secondary">{{message}}</div>
        {{/if}}

        <form onsubmit="return loginValidate()" method="post" action="/admin/login">
            <input type="email" id="email" name="email" class="form-control" placeholder="Email">
            <input type="password" id="password" name="password" class="form-control" placeholder="Password">
            <a href="#" class="forgot">Forgot password?</a>

            <div id="formError" class="error-msg"></div>

            <button type="submit" class="btn btn-dark">LogIn</button>
        </form>

    </div>


    <script>
        function loginValidate() {
            let email = document.getElementById("email").value.trim();
            let password = document.getElementById("password").value.trim();
            let errorBox = document.getElementById("formError");
            errorBox.innerText = "";

            let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            let passwordRegex = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d!@#$%^&*]{6,}$/;

            if (!emailRegex.test(email)) {
                errorBox.innerText = "Enter a valid email address.";
                return false;
            }

            if (!passwordRegex.test(password)) {
                errorBox.innerText = "Password must be at least 6 characters, include a letter and a number.";
                return false;
            }

            return true;
        }


        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>